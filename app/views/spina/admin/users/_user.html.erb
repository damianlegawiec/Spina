<div class="bg-white mb-2 flex items-center justify-between space-x-8 px-4 py-3 rounded-md shadow-sm border border-gray-200">
  <div class="flex items-center">
    <%= image_tag user.gravatar_url, alt: user.name, class: 'rounded-md w-10 h-10 mr-3' %>
    
    <div>
      <div class="font-medium"><%= user.name %></div>
      <div class="text-gray-500 text-sm"><%= user.email %></div>
    </div>
  </div>
  
  <% if user.admin? %>
    <div class="flex items-center text-green-500">
      <%= icon("badge-check", css: "w-6 h-6 mr-1") %>
      <span class="text-sm font-medium"><%= Spina::User.human_attribute_name(:admin) %></span>
    </div>
  <% end %>
  
  <div class="flex-1"></div>
  
  <div class="text-gray-400 text-sm">
    <% if user.last_logged_in %>
      Last login: 
      <%=l user.last_logged_in, format: :long %>
    <% else %>
      Never logged in
    <% end %>
  </div>
  
  <div>
    <%= link_to spina.edit_admin_user_path(user), class: "btn btn-default px-3 text-gray-400 hover:text-gray-700" do %>
      <%= icon('pencil', css: 'w-4 h-4') %>
    <% end %>
  </div>
</div>