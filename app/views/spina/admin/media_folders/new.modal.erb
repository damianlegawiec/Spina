<%= render(Spina::ModalComponent.new) do |component| %>
  <% component.with(:body) do %>
    <%= form_with model: @media_folder, url: spina.admin_media_folders_path do |f| %>
      <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <div class="sm:flex sm:items-start">
          <div class="w-full">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
              Add new media folder
            </h3>

            <div class="mt-3">
              <%= f.text_field :name, placeholder: Spina::MediaFolder.human_attribute_name(:name), class: "form-input w-full" %>
            </div>

          </div>
        </div>
      </div>
      <div class="bg-gray-100 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
        <button type="submit" class="btn btn-primary w-full sm:w-auto sm:ml-2">
          Create media folder
        </button>
        <button type="button" class="btn w-full sm:w-auto mt-2 sm:mt-0" data-action="modal#close">
          Cancel
        </button>
      </div>
    <% end %>
  <% end %>
<% end %>