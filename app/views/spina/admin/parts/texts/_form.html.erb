<div class="mt-6" data-controller="media-picker" data-media-picker-path="<%= spina.admin_media_picker_path(format: :modal) %>" data-media-picker-insert-type="trix">
  <label class="block text-sm leading-5 font-medium text-gray-700"><%= f.object.title %></label>
  <div class="mt-1 relative">
    <%= f.hidden_field :content, id: "#{f.object.object_id}_input" %>

    <div class="relative form-textarea p-4 shadow-sm max-w-5xl" data-controller="trix">
      <trix-toolbar class="relative" id="<%= f.object.object_id %>_trix-toolbar"></trix-toolbar>
      <trix-editor class="prose prose-sm focus:outline-none max-w-3xl xl:border-r border-dashed border-gray-200 pr-3" toolbar="<%= f.object.object_id %>_trix-toolbar" input="<%= f.object.object_id %>_input" data-media-picker-target="trix" data-trix-target="editor" data-action="trix-file-accept->trix#preventDefault"></trix-editor>
    </div>
  </div>
</div>