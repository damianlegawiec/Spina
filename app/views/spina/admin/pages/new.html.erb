<%= render(Spina::ModalComponent.new) do %>
  <%= form_with model: @page, url: spina.admin_pages_path, data: {turbo_frame: "_top"} do |f| %>
    <%= f.hidden_field :view_template %>

    <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
      <div class="sm:flex sm:items-start">
        <div class="w-full">
          <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-headline">
            New page
            <span class="text-gray-400 text-sm">(<%= f.object.view_template %>)</span>
          </h3>

          <div class="mt-3">
            <%= f.text_field :title, placeholder: Spina::Page.human_attribute_name(:title), class: "form-input w-full", data: {controller: "autofocus"} %>
          </div>
          
          <div class="mt-4">
            <div class="text-sm font-medium text-gray-700 mb-1">Add page to:</div>
            <div class="flex items-center border border-gray-300 rounded-md bg-white p-1 relative shadow-sm">
              <%= heroicon("collection", style: :solid, class: 'w-5 h-5 ml-2 text-gray-400 absolute') %>
              <%= f.select :resource_id, Spina::Resource.pluck(:label, :id), {include_blank: "Main collection"}, class: "form-select hover:bg-gray-100 bg-none shadow-none w-auto bg-transparent border-none focus:ring-0 cursor-pointer pr-2 pl-8 flex-none truncate", data: {controller: "select-placeholder", action: "select-placeholder#update"} %>
              <%= heroicon('chevron-right', style: :solid, class: 'w-5 h-5 text-gray-600 flex-none') %>
              <%= f.select :parent_id, page_ancestry_options(f.object), {include_blank: "No parent page"}, class: "form-select hover:bg-gray-100 border-none focus:ring-0 bg-none shadow-none w-auto bg-transparent border-none cursor-pointer pr-2 flex-auto truncate", data: {controller: "select-placeholder", action: "select-placeholder#update"} %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="px-4 pb-5 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
      <button type="submit" class="btn btn-primary w-full sm:w-auto sm:ml-2">
        Create page
      </button>

      <button type="button" class="btn btn-default w-full sm:w-auto mt-2 sm:mt-0" data-action="modal#close">
        Cancel
      </button>
    </div>
  <% end %>
<% end %>
