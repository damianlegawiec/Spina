<%= render Spina::HeaderComponent.new do |header| %>
  <% header.with(:actions) do %>
    <div class="relative ml-3 w-auto" data-controller="reveal" data-reveal-away>
      <button type="button" class="btn btn-primary w-full" data-action="reveal#toggle">
        <%= icon("plus", css: "w-7 h-7 -ml-2") %>
        <%=t 'spina.pages.new' %>
      </button>

      <div hidden data-reveal data-transition class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg border border-gray-200">
        <div class="rounded-md bg-white shadow-xs">
          <div class="py-1">
            <% Spina::Current.theme.new_page_templates.each do |template| %>
              <%= link_to spina.new_admin_page_path(view_template: template[0]), class: "block px-4 py-2 text-sm leading-5 text-gray-700 hover:bg-gray-100 hover:text-gray-900 focus:outline-none focus:bg-gray-100 focus:text-gray-900", data: {turbo_frame: "modal"} do %>
                <div class="font-medium text-gray-700"><%= template[1] %></div>
                <div class="text-gray-400"><%= template[2] %></div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
  <% header.with(:navigation) do %>
    <nav class="-mb-3 mt-4">
      <ul class="inline-flex w-auto rounded-md bg-white">
        <%= render Spina::TabLinkComponent.new("#{icon('collection', css: 'w-4 h-4 mr-1 -ml-1 opacity-75')} #{t('spina.website.main')}".html_safe, spina.admin_pages_path, active: true) %>
        
        <% Spina::Resource.order(:name).each do |page_collection| %>
          <%= render Spina::TabLinkComponent.new("#{icon('collection-medium', css: 'w-4 h-4 mr-1 -ml-1 opacity-75')} #{page_collection.label}".html_safe, spina.admin_resource_path(page_collection)) %>
        <% end %>
      </ul>
    </nav>
  <% end %>
<% end %>

<div class="my-6 md:m-8 bg-white md:rounded-lg border-l-0 border-r-0 border md:border-r md:border-l border-gray-200 border-b-0 shadow-sm">
  <%= render Spina::Pages::ListComponent.new(pages: @pages) %>
</div>
