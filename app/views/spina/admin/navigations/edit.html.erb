<%= render Spina::HeaderComponent.new do |header| %>
  <% header.with(:navigation) do %>
    <nav class="-mb-3 mt-4">
      <ul class="inline-flex w-auto rounded-md bg-white">
        <% @navigations.each do |navigation| %>
          <%= render Spina::TabLinkComponent.new("#{heroicon('menu-alt-2', style: :solid, class: 'w-3 h-3 mr-1')} #{navigation.label}".html_safe, spina.edit_admin_navigation_path(navigation), active: @navigation == navigation) %>
        <% end %>
      </ul>
    </nav>
  <% end %>
<% end %>

<div class="p-4 md:p-8">
  <label class="font-medium block">
    <%= @navigation.label %> menu
  </label>
  <div class="text-gray-600 text-sm">Create a menu for your website.<br />Add items and order them however you like.</div>

  <div class="py-5">
    <ul class="space-y-2" data-controller="sortable" data-sortable-target="list" id="<%= dom_id(@navigation) %>">
      <%= form_with url: spina.sort_admin_navigation_path(@navigation), data: {sortable_target: "form"} do |f| %>
      <% end %>
      
      <%= render @navigation.navigation_items.sorted.roots %>
    </ul>
    
    <div class="w-72">
      <%= link_to spina.new_admin_navigation_navigation_item_path(@navigation), class: 'btn btn-default mt-2 bg-transparent pr-2', data: {turbo_frame: "modal"} do %>
        <%= heroicon('plus', style: :solid, class: "w-5 h-5 -ml-1 mr-1 text-gray-400") %>
        <div class="w-32 text-left truncate">Add menu item</div>
        <div class="pl-2 w-4 mr-3"></div>
      <% end %>
    </div>
  </div>
</div>
