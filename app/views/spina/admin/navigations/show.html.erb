<%= render Spina::HeaderComponent.new do |header| %>
  <% header.with(:navigation) do %>
  <nav class="-mb-3 mt-4">
    <ul class="inline-flex w-auto rounded-md bg-white">
      <%= render Spina::TabLinkComponent.new("#{icon('document-text', css: 'w-4 h-4 mr-1 -ml-1 opacity-75')} #{t('spina.website.all_pages')}".html_safe, spina.admin_pages_path) %>
      
      <% Spina::Navigation.order(:position).each do |navigation| %>
        <%= render Spina::TabLinkComponent.new(navigation.label, spina.admin_navigation_path(navigation), active: @navigation == navigation) %>
      <% end %>
    </ul>
  </nav>
  <% end %>
<% end %>

<div class="p-8">
  Nav!
</div>