<li data-navigation-target="navigation">
  <button type="button" class="flex w-full items-center p-3 <%= button_classes %> hover:opacity-100 transition-opacity" data-navigation-target="button" data-action="navigation#toggle">
    <%= icon %>
  </button>

  <ul class="shadow-2xl md:shadow-0 md:border-0 md:block md:h-screen bg-spina-dark md:bg-gradient-to-b md:from-spina-dark md:to-spina-light absolute left-0 md:inset-0 z-50 md:z-10 px-2 md:px-3 py-3 md:py-5 w-full transform transition-transform ease-in-out duration-300 <%= ul_classes %>">
    <%= links %>
    
    <button type="button" data-action="navigation#backToFirstLevel" class="hidden md:flex text-white opacity-30 hover:opacity-100 w-full transition-opacity font-semibold py-3">
      <%= helpers.icon('chevron-right', css: "w-6 h-6 transform rotate-180 ml-1") %>
      <%=t "spina.main_menu" %>
    </button>
  </ul>
</li>
