<%= render(Spina::ModalComponent.new(size: "max-w-6xl h-full")) do |component| %>
  <div class="h-full w-full" data-controller="infinite-scroll media-picker-modal" data-target="<%= @target %>">
    <div class="flex flex-col md:flex-row h-full w-full">

      <div class="flex-1 bg-white flex flex-col max-h-full relative overflow-hidden">
        <div data-infinite-scroll-target="container" data-controller="selectable" class="p-6 h-full w-full overflow-scroll ">
          
          <!-- Images are loaded using nested turbo-frame-tags -->
          <!-- Only load images in multiples of 4 so that this grid -->
          <!-- will not show any gaps. -->
          <turbo-frame id="images-<%= @images.current_page %>">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 auto-rows-min">
              <%= render Spina::MediaPicker::ImageComponent.with_collection(@images) %>
            </div>
            
            <% if @images.next_page %>
              <turbo-frame id="images-<%= @images.next_page %>">
                <%= link_to "Load next", helpers.path_to_next_page(@images), data: {infinite_scroll_target: "button"} %>
              </turbo-frame>
            <% end %>
            
          </turbo-frame>
          
        </div>
      </div>
      
      <div class="md:w-72 p-4 border-t rounded-b-lg md:rounded-none md:border-t-0 border-gray-200 flex flex-col justify-between bg-gray-100 md:bg-opacity-50 md:rounded-l-lg">
        <div class="hidden md:block md:mb-6" data-controller="selectable">            
          <div data-selectable-target="item">            
            <%= link_to helpers.spina.admin_media_picker_path, class: "font-semibold w-full bg-spina-dark bg-opacity-20 text-gray-900 text-sm px-3 py-2 rounded-lg flex items-center justify-between", data: {selected_class: "text-gray-900 bg-spina-dark bg-opacity-20", deselected_class: "text-gray-600 hover:bg-gray-200 bg-opacity-100", action: "selectable#select", turbo_frame: "images-1"} do %>
              <div class="flex items-center">
                <%= helpers.heroicon("collection", style: :solid, class: "w-5 h-5 mr-2 text-spina-light") %>
                All images
              </div>
              
              <div class="text-spina text-sm font-semibold" data-selected-class="text-spina" data-deselected-class="text-gray-400">
                <%= image_count %>
              </div>
            <% end %>
          </div>

          <% media_folders.each do |media_folder| %>
            <div data-selectable-target="item">
              <%= link_to helpers.spina.admin_media_picker_path(media_folder_id: media_folder.id), class: "font-medium w-full text-gray-600 text-sm hover:bg-gray-200 px-3 py-2 cursor-pointer rounded-lg flex items-center justify-between", data: {selected_class: "text-gray-900 bg-spina-dark bg-opacity-20", deselected_class: "text-gray-600 hover:bg-gray-200 bg-opacity-100", action: "selectable#select", turbo_frame: "images-1"} do %>
                <div class="flex items-center">
                  <%= helpers.heroicon('folder', style: :solid, class: 'w-5 h-5 mr-2 text-spina-light') %>
                  <%= media_folder.name %>
                </div>
                
                <div class="text-gray-400 text-sm font-semibold" data-selected-class="text-spina" data-deselected-class="text-gray-400">
                  <%= media_folder.images.count %>
                </div>
              <% end %>
            </div>
          <% end %>
          
          <% if false %>
            <%= form_with model: Spina::Image.new, url: '#' do |f| %>
              <%= f.file_field :files, multiple: true, accept: "image/*", class: 'hidden', data: {action: "file-manager#startUpload", file_manager_target: "fileField"} %>
              
              <button type="button" class="font-medium w-full text-gray-600 text-sm hover:bg-gray-200 px-3 py-2 cursor-pointer rounded-lg flex items-center" data-controller="button" data-loading-message="Uploading...">
                <%= helpers.heroicon("upload", style: :solid, class: "w-5 h-5 text-spina mr-2") %>
                Upload from device...
              </button>
            <% end %>
          <% end %>
        </div>
        
        <button type="button" class="btn btn-primary w-full mt-3" data-action="media-picker-modal#confirm modal#close">
          <%= helpers.heroicon("plus", style: :solid, class: "text-white w-6 h-6") %>
          Insert image
        </button>
      </div>
    </div>
  </div>
<% end %>
